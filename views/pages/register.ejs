<!DOCTYPE html>
<html lang="en" ng-app="angApp">

<head>
	<% include ../partials/header.ejs %>

	<!-- Place Angular App Scripts here -->
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.5.8/angular.min.js"></script>
    <script src="/javascript/angular/app_core.js"></script>
    <script src="/javascript/angular/angController.js"></script>
    <script src="/javascript/angular/angService.js"></script>
    <script src="/javascript/angular/tokensController.js"></script>
    <script src="/javascript/angular/register.js"></script>

      <script src="https://use.fontawesome.com/1f259fae63.js"></script>
<link rel="stylesheet" href="/stylesheets/login.css" />
</head>

<body ng-controller="ctrlRegister" ng-cloak class="ng-cloak">

	<% include ../partials/nav.ejs %>


<% if (message && message == null) { %>
  <script>  
  document.getElementById("errMsg").style.display = "none"; 
  </script>

   <% } %>
		<div class="container login">
		<div class="jumbotron text-center">
		<h1>Register</h1>
		</div>

    <div id="login">
  <form name='form-login' action="/register" method="post">
    <span class="fontawesome-user"><i class="fa fa-user" aria-hidden="true"></i></span>
    <input type="text" id="user" name="username" placeholder="Username">

    <span class="fontawesome-lock"><i class="fa fa-lock" aria-hidden="true"></i></span>
    <input type="password" id "pass" name="password" placeholder="Password">

    <input type="submit" value="Sign up">
<p id="errMsg"><%= message %></p>
  </form>
</div>

</div>

		<footer>
			<!-- add the partials footer later -->
		</footer>

</body>

</html>