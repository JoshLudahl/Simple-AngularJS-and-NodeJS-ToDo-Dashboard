<!DOCTYPE html>
<html lang="en" ng-app="angApp">
<head>
    <% include ../partials/dashboard.ejs %>

    <!-- Place Angular App Scripts here -->
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.5.8/angular.min.js"></script>
    <script src="/javascript/angular/app_core.js"></script>
    <script src="/javascript/angular/angController.js"></script>
    <script src="/javascript/angular/angService.js"></script>
    <script src="/javascript/angular/tokensController.js"></script>
    <script src="/javascript/angular/register.js"></script>
</head>

<body ng-cloak class="ng-cloak" ng-controller="listController">
<link href='https://fonts.googleapis.com/css?family=Roboto+Condensed:300' rel='stylesheet' type='text/css'/>

<!-- Navigation -->
<nav class="navbar navbar-default navbar-static-top navbar-custom">
    <div class="container-fluid">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed unit" data-toggle="collapse"
                    data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <span ng-controller="tokenCtrl">
            <a class="navbar-brand" href="/dashboard"><i class="fa fa-tree fa-lg" aria-hidden="true"></i>&nbsp;
                Welcome, <%= user.username %></a></span>
        </div>

        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">

            <ul class="nav navbar-nav navbar-right">
                <li class="dropdown">
                  <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><i class="fa fa-user" aria-hidden="true"></i>
                    <span class="caret"></span>
                  </a>
                  <ul class="dropdown-menu">
                    <li><a href="/logout"><i class="fa fa-sign-out" aria-hidden="true"></i> Logout</a></li>
                  </ul>
                
                </li>
              <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><i class="fa fa-th-large" aria-hidden="true"></i>
              <span class="caret"></span></a>
              <ul class="dropdown-menu">
                <li><a href="https://docs.mongodb.com/manual/" target="_blank">MongoDB</a></li>
                <li><a href="https://expressjs.com/en/guide/routing.html" target="_blank">ExpressJS</a></li>
                <li><a href="https://docs.angularjs.org/guide/" target="_blank">AngularJS</a></li>
                <li><a href="https://nodejs.org/api/" target="_blank">NodeJS</a></li>
                <li role="separator" class="divider"></li>
                <li><a href="http://mongoosejs.com/" target="_blank">Mongoose</a></li>
				<li><a href="https://github.com/passport/express-4.x-local-example" target="_blank">Passport Example</a></li>
              </ul>
            </li>
              <% if(user.role == 'ADMIN') {%>
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true"
                       aria-expanded="false"><i class="fa fa-globe" aria-hidden="true"></i>
                        <span class="caret"></span></a>
     <ul class="dropdown-menu">


                  <li>
                    <a href="http://localhost" target="_blank">localhost</a>
                  </li>
                  <li>
                    <a href="http://localhost:3000" target="_blank">Node Server</a>
                  </li>
                  <li>
                    <a href="http://localhost:8080" target="_blank">Java Server</a>
                  </li>

                </ul>
                </li> <%}%>
            </ul>
        </div><!-- /.navbar-collapse -->
    </div><!-- /.container-fluid -->
</nav>


<div class="container-fluid">
    <div class="row">
        <div class="col-md-3">


            <div class="container-fluid unit">
                <div class="panel panel-default panel-green">
                    <div id="timePanel" class="panel-body text-center">

                        <span id="localTime" class="localTime"></span>

                        <br/>

                        <span id="localDate" class="localDate"></span>
                        <br/>

                        <span id="localClock" class="localClock"></span>

                    </div>
                </div>
            </div>

            <div class="container-fluid unit">
                <div class="panel panel-default panel-green">
                    <div class="panel-body text-center">
                        <h1>Google Search</h1>


                        <form target="_blank" method="get" action="http://www.google.com/search" class="form-inline">
                            <div class="form-group">
                                <input type="text" class="form-control boxy" name="q" placeholder="Search for shit">
                            </div>

                        </form>

                    </div>
                </div>
            </div>

            <div class="container-fluid unit" ng-controller="listController">
                <div class="panel panel-default panel-green">
                    <div class="panel-body">
                        <h1 class="text-center">ToDo List</h1>

                        <!-- FORM TO CREATE TODOS -->
                        <div id="todo-form" class="row">
                            <div class="col-sm-8 col-sm-offset-2 text-center">
                                <form class="form-inline" ng-submit="createTodo()">
                                    <div class="form-group">

                                        <!-- BIND THIS VALUE TO formData.text IN ANGULAR -->
                                        <input type="text" class="form-control" placeholder="Enter todo item" ng-model="formData.item" required="required" />
                                    </div>

                                    <!-- createToDo() WILL CREATE NEW TODOS -->
                                </form>
                            </div>
                        </div>

                        <div class="todoList" ng-repeat="todo in todos">
                            <ul>
                                <li><a href="#" ng-click="deleteTodo(todo._id)"><i class="material-icons">delete</i></a> {{todo.name}}</li>
                            </ul>
                        </div>



                    </div>
                </div>
            </div>


        </div>
        <div class="col-md-6">


            <div class="types">

                <h1>“A designer knows he has achieved perfection not when there is nothing left to add, but when there
                    is nothing left to take away.”</h1>

                <p><a href="https://en.wikipedia.org/wiki/Antoine_de_Saint-Exup%C3%A9ry" target="_blank">Antoine de
                        Saint-Exupery</a></p>

                <h2>{{1+2}}</h2>

            </div>
        </div>

        <div class="col-md-3">



            <div class="container-fluid unit">
                <div class="panel panel-default panel-green">
                    <div class="panel-body" ng-controller="tokenCtrl">
<h1>Projects</h1>
                 <ul>
					<li>Projects here</li>
				 </ul>
                    </div>
                </div>
            </div>


            <div class="container-fluid unit">
                <div class="panel panel-default panel-green">
                    <div class="panel-body" ng-controller="tokenCtrl">
                        <h1>Useful Links</h1>
                        <ul>
                            <li ng-repeat="link in links">

                                <a href="{{link.url}}" target="_blank">{{link.site}}</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>


            <div class="container-fluid unit">
                <div class="panel panel-default panel-green">
                    <div class="panel-body text-center">

                        <div class="vertical-center">
                            <div class="container-fluid text-center">

                                <div class="row text-center">
                                    <div class="col-xs-2"></div>


                                    <div class="col-xs-8">
                                        <h2>
                                            <i class="fa fa-quote-left" aria-hidden="true"></i>

                            <span class="quote-text">
                              This is a long quote meant for testing my quote machine.
                            </span>
                                            <i class="fa fa-quote-right" aria-hidden="true"></i>


                                        </h2>
                                        <h4><span class="author-text">Josh Ludahl</span></h4>
                                        <a class="tweet" title="Tweet This"
                                           href="https://twitter.com/intent/tweet?hashtags=quotes&related=freecodecamp&text=This is a long quote meant for testing my quote machine. -Josh Ludahl"
                                           target="_blank">
                                            <i class="fa fa-twitter" aria-hidden="true"></i>

                                        </a>
                                    </div>
                                </div>

                                <div class="row">

                                    <button id="btnQuote" class="btnNew">New Quote</button>

                                </div>
                                <div class="col-xs-2"></div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>


        </div>
    </div>
</div>


<script src="/dashboard/js/quote.js"></script>

</body>

</html>
